{{> navbar user }}

<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="jumbotron text-center found-title">
                <h4 class="display-6">Found Pets</h4>
            </div>
        </div>
    </div>
    {{#if posts}}
    {{#each posts}}
    <div class="row">
        <div class="col-md found-pet-post">
            <div class="card mb-3 mx-auto" style="max-width:30rem;">
                <h3 class="card-header bg-warning text-white text-center">{{title}}</h3>
                <img style="width: 100%; display: block;" src={{'Pet.picture'}}>
                <div class="card-body">
                    <div class="card-header text-center bg-primary text-white">
                        <h6>{{'Pet.petType'}}</h6>
                    </div>
                    <p class="card-text">
                    <h6 class="text-center"><b>Message/Pet Description:</b></h6>
                    <div class="text-center">{{'Pet.description'}}</div>
                    </p>
                    <button type="button" class="btn btn-primary view-pet" data-id='{{this.id}}' id="viewFoundPet">View
                        Pet</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{else}}
        <div class="row">
        <div class="col-md">
            <h6 class="text-center">- No Found Posts -</h6>
        </div>
    </div>
    {{/if}}
</div>
<script>
    $(document).ready(function () {
        $(document).on("click", "#viewFoundPet", function () {
            var id = $(this).data("id");
            window.location.replace("/view/pet/" + id);
        });
    });
</script>